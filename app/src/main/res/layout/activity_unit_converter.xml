<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".UnitConverter">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/back_btn"
        android:layout_marginLeft="10dp"
        android:src="@drawable/back_btn"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/back_btn"
        android:text="Basic Tools"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="80dp"/>


    <androidx.cardview.widget.CardView
        android:layout_below="@+id/back_btn"
        android:id="@+id/cardview_length"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:id="@+id/lottie_length"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/alarm"
            />

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_below="@+id/cardview_length"
        android:id="@+id/text_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm"
        android:textColor="@color/black"
        android:layout_marginLeft="24dp"

        />

    <androidx.cardview.widget.CardView
        android:layout_below="@id/back_btn"
        android:layout_toRightOf="@+id/cardview_length"
        android:id="@+id/cardview_area"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:id="@+id/lottie_length2"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/calculator"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_area"
        android:layout_below="@+id/cardview_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/text_length"
       android:layout_marginLeft="90dp"
        />


