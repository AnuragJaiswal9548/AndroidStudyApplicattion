                        android:layout_height="wrap_content"
                        android:layout_marginStart="35sp"
                        android:layout_toEndOf="@+id/Mth1"
                        android:text="Relations and Functions"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_mth1"
                        android:layout_marginStart="5sp"
                        android:layout_toRightOf="@+id/Mth1"
                        android:text="Introduction , Types of Relation, Types of Functions, Composition of functions and invertible functions, Ninary Operations ." />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
